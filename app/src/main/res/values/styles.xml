<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/colorPrimaryDark</item>
  </style>

  <style name="textTitle" parent="TextAppearance.AppCompat.Title">
    <item name="android:textSize">@dimen/textTitle</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/roboto_bold_condensed</item>
    <item name="android:layout_marginStart">@dimen/gutterMargin</item>
    <item name="android:layout_marginEnd">@dimen/gutterMargin</item>
    <item name="android:layout_marginTop">32dp</item>
  </style>

</resources>